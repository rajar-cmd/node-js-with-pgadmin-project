# Server
PORT=5000
NODE_ENV=development

# Database - Option 1: Individual variables
DB_USER=users
DB_PASSWORD=root
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=new_database

# Database - Option 2: Connection string (for Heroku, Supabase, etc.)
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# For cloud databases (Heroku, Supabase, etc.) - set to true if SSL required
DB_SSL=false

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Bcrypt (rounds for password hashing, 10-12 recommended)
BCRYPT_ROUNDS=10

# CORS (optional, defaults to *)
CLIENT_URL=http://localhost:3000
